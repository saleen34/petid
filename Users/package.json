{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Node server. Supports Mocha for testing, JSX syntax, Linting etc.",
  "main": "src/server.jsx",
  "scripts": {
    "watch:build": "webpack -wd",
    "watch:server": "nodemon --exec babel-node src/index.jsx",
    "watch:server:debug": "nodemon --inspect-brk --exec babel-node src/index.jsx --ignore public/",
    "test": "mocha ./tests/ --opts tests/mocha.opts",
    "seed": "node_modules/babel-cli/bin/babel-node.js db/index.jsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saleen34/node-boilerplate.git"
  },
  "keywords": [
    "Node",
    "Mocha",
    "Express",
    "GraphQL"
  ],
  "author": "Nick Pate",
  "license": "ICS",
  "bugs": {
    "url": "https://github.com/saleen34/node-boilerplate/issues"
  },
  "homepage": "https://github.com/saleen34/node-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint-config-airbnb-standard": "^1.4.1",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.7",
    "graphql-server-express": "^1.1.6",
    "graphql-tools": "^2.3.0",
    "mocha": "^4.0.1",
    "mongoose": "^4.12.1",
    "mongoose-sequence": "^4.0.0",
    "should": "^13.1.0"
  }
}
